        <Button x:Name="revealButton" Content="Reveal" Margin="30,244,0,0" VerticalAlignment="Top" Width="75" Click="revealButton_Click" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalContentAlignment="Bottom"/>
        <TextBox x:Name="textBox" Height="23" Margin="30,40,37,0" TextWrapping="Wrap" Text="InputImage.png" VerticalAlignment="Top"/>
        <TextBox x:Name="messageTextBox" Height="140" Margin="30,68,37,0" TextWrapping="Wrap" Text="Message" VerticalAlignment="Top" VerticalScrollBarVisibility="Auto"/>

    </Grid>
